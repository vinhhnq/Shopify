                {% endif %}
                <img class="w-100 lazyload" data-src="{{ block.settings.image_2 | img_url: '1920x' }}" alt="img">
                {% if block.settings.link_2 != blank %}
                  </a>
                {% endif %}
                {% if block.settings.title_2 != blank %}
