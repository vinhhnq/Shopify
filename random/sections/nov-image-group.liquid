<div class="distance{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}">
  {% if section.settings.has_fullwidth == false %}
    <div class="container">
  {% endif %}
  {% if section.settings.title != blank %}
  <div class="{{ section.settings.title_alignment }}">
    <div class="title_block">
      <span>{{ section.settings.title }}</span>
      {% if section.settings.subheading != blank %}
      <span class="sub_title">{{ section.settings.subheading | escape }}</span>
      {% endif %}
    </div>
  </div>
  {% endif %}

  <div class="row spacing-{{ section.settings.spacing }}">
    {% for block in section.blocks %}
      <div class="{{ block.settings.width_group_image_lg }} {{ block.settings.width_group_image_md }} {{ block.settings.width_group_image_sm }}{% if block.settings.class_group_image != blank %} {{ block.settings.class_group_image }}{% endif %}">
        <div class="row spacing-{{ section.settings.spacing }} spacing-sm-10">
          {% if block.settings.image_1 != blank %}
            <div class="{{ block.settings.width_image_1 }} {{ block.settings.width_image_1_md }} {{ block.settings.width_image_1_sm }} {{ block.settings.width_image_1_xs }}{% if block.settings.class_1 != blank %} {{ block.settings.class_1 }}{% endif %}">
              <div class="gallery-image__item{% if section.settings.style_img_1 == true %} nov-sh-image-1{% endif %}{% if section.settings.style_img_2 == true %} nov-sh-image-2{% endif %}">
                {% if block.settings.link_1 != blank %}
                  <a class="w-100" href="{{ block.settings.link_1 }}">
                {% endif %}
                <img class="w-100 lazyload" data-src="{{ block.settings.image_1 | img_url: '1920x' }}" alt="img">
                {% if block.settings.link_1 != blank %}
                  </a>
                {% endif %}
                {% if block.settings.title_1 != blank %}
                  <div class="title-block text-uppercase">
                    <a href="{{ block.settings.link_1 }}">{{ block.settings.title_1 }}</a>
                  </div>
                {% endif %}
              </div>
            </div>
          {% endif %}
          {% if block.settings.image_2 != blank %}
            <div class="{{ block.settings.width_image_2 }} {{ block.settings.width_image_2_md }} {{ block.settings.width_image_2_sm }} {{ block.settings.width_image_2_xs }}{% if block.settings.class_2 != blank %} {{ block.settings.class_2 }}{% endif %}">
              <div class="gallery-image__item{% if section.settings.style_img_1 == true %} nov-sh-image-1{% endif %}{% if section.settings.style_img_2 == true %} nov-sh-image-2{% endif %}">
                {% if block.settings.link_2 != blank %}
