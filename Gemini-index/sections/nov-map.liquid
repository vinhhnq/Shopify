<div class="distance" style="padding-top: {{ section.settings.distance_top }}; padding-bottom: {{ section.settings.distance_bottom }}">
  <div id="MapSection--{{ section.id }}"
       class="map-section {% if display_map %}map-section--display-map{% endif %} {% if onboarding == true %}map-section--onboarding{% endif %} {{ section.settings.class }}"
       data-section-id="{{ section.id }}"
       data-section-type="map"
       {% if bg_image != blank %}
       data-bgset="{% include 'bgset', image: bg_image %}"
       style="background-image: url('{{ bg_image | img_url: '1920x' }});"
       {% endif %}>
    <div class="page-width map-section__wrapper">
      {% if section.settings.has_fullwidth == false %}
      <div class="container">
      {% endif %}
        <div class="map-section__background-wrapper">
          <div class="map-section__container">
            <iframe src="{{ section.settings.iframe_map }}" width="100%" height="100%" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
          </div>
        </div>
      {% if section.settings.has_fullwidth == false %}
      </div>
      {% endif %}
    </div>
  </div>
</div>

