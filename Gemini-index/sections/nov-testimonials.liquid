<div data-section-id="{{ section.id }}" data-section-type="nov-slick" class="testimonial distance{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}">
  {% if section.settings.full_width == false %}
    <div class="container">
  {% endif %}

    {% if section.settings.title != blank %}
      <div class="{{ section.settings.title_alignment }}">
        <div class="title_block mb-50 mb-sm-30">
          <span>{{ section.settings.title }}</span>
          {% if section.settings.subheading != blank %}
            <span class="sub_title mt-0">{{ section.settings.subheading | escape }}</span>
          {% endif %}
        </div>
      </div>
    {% endif %}
    <div class="testimonial_block">
      {% if section.blocks.size > 0 %}
        <div class="testimonials-slider{% if section.settings.spacing != blank %} spacing-{{ section.settings.spacing }}{% endif %} nov-slick-carousel" 
        data-dots="false"
        data-nav="false"
        data-items="1"
        data-items_md="1"
        data-items_sm="1"
        data-loop="false"
        {% if section.settings.show_nav %}data-custnav ="true"{% endif %}>
          {% for block in section.blocks %}
            {% case block.settings.star %}
            {% when 1 %}
              {%- assign ns = '<i class="rating"></i><i></i><i></i><i></i><i></i>' -%}
            {% when 2 %}
              {%- assign ns = '<i class="rating"></i><i class="rating"></i><i></i><i></i><i></i>' -%}
            {% when 3 %}
              {%- assign ns = '<i class="rating"></i><i class="rating"></i><i class="rating"></i><i></i><i></i>' -%}
            {% when 4 %}
              {%- assign ns = '<i class="rating"></i><i class="rating"></i><i class="rating"></i><i class="rating"></i><i></i>' -%}
            {% when 5 %}
              {%- assign ns = '<i class="rating"></i><i class="rating"></i><i class="rating"></i><i class="rating"></i><i class="rating"></i>' -%}
            {% endcase %}
            <div class="testimonial-item text-center">
              
              {% if section.settings.s_star == true %}
                <div class="testimonial-rating mb-15">{{ ns }}</div>
              {% endif %}
              {% if block.settings.quote != blank %}
                <div class="testimonial-item__text ">{{ block.settings.quote }}</div>
              {% endif %}
              <div class="bl_info d-inline-flex align-items-center mt-40">
                {% if section.settings.show_avatar == true %}
                  <div class="testimonial-avatar">
                    <img src="{{ block.settings.avatar | img_url: '120x' }}">
                  </div>
                {% endif %}
                <div>
                  {% if block.settings.name != blank %}
                    <div class="testimonial-item__name mb-5">{{ block.settings.name }}</div>
                  {% endif %}
                  {% if block.settings.info_other != blank %}
                    <div class="testimonial-item__info">{{ block.settings.info_other }}</div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
        {% if section.settings.show_nav %}
          <div class="bl_nav_cust d-flex align-items-center justify-content-center pt-60">
            <div class="d-flex">
            <div class="prev_custom">{% include 'arrow-left' %}</div>
            <div class="num_nav"><span class="current_nav"></span> - <span class="total_nav"></span></div>
            <div class="next_custom">{% include 'arrow-right' %}</div>
            </div>
          </div>
        {% endif %}
      {% endif %}

      {% if section.blocks.size == 0 %}
        {% include 'no-blocks' %}
      {% endif %}
    </div>

  {% if section.settings.full_width == false %}
    </div>
  {% endif %}
</div>

{% schema %}
