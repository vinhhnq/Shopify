<div data-section-id="{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  <header class="site-header{% if section.settings.stickymenu == true %} sticky-menu{% endif %}">
    <div class="header-mobile d-md-none">
      <div class="d-flex align-items-center">
        <div class="mobile_logo text-center">
          {% if section.settings.logo_mb %}
            <a href="/" itemprop="url" class="site-header__logo-image">
              {%- assign image_size = section.settings.logo_width | append: 'x' -%}
              <img srcset="{{ section.settings.logo_mb | img_url: image_size }} 1x, {{ section.settings.logo_mb | img_url: image_size, scale: 2 }} 2x"
                src="{{ section.settings.logo_mb | img_url: image_size }}"
                loading="lazy"
                class="header__heading-logo logo_mb"
                alt="{{ section.settings.logo_mb.alt | default: shop.name | escape }}"
              >
          	</a>
          {% else %}
          <a class="site-header__logo-link" href="/" itemprop="url">{{ shop.name }}</a>
          {% endif %}
        </div>
        <div id="mobile_search">
          {% include 'nov-formsearch-inline' %}
        </div>
        <div class="d-flex justify-content-end">
          <div id="show-megamenu" class="item-mobile-top"><i class="zmdi zmdi-view-headline"></i></div>
        </div>
      </div>
    </div>
    <div class="header-top d-none d-md-block">
      <div class="container">
        <div class="row align-items-center">
          <div class="col-lg-3 col-md-9 d-flex align-items-center position-static">
            <div class="btn_toggle_nav d-lg-none d-md-block">
              <i class="fa fa-bars" aria-hidden="true"></i>
            </div>
            <div class="contentsticky_logo">
              <h1 class="h2 site-header__logo mb-0" itemscope itemtype="http://schema.org/Organization">
                {% if section.settings.logo_pc %}
                  <a href="/" itemprop="url" class="site-header__logo-image">
                    {%- assign image_size = section.settings.logo_width | append: 'x' -%}
                    <img srcset="{{ section.settings.logo_pc | img_url: image_size }} 1x, {{ section.settings.logo_pc | img_url: image_size, scale: 2 }} 2x"
                      src="{{ section.settings.logo_pc | img_url: image_size }}"
                      loading="lazy"
                      class="header__heading-logo logo_pc"
                      width="{{ section.settings.logo_pc.width }}"
                      height="{{ section.settings.logo_pc.height }}"
                      alt="{{ section.settings.logo_pc.alt | default: shop.name | escape }}"
                    >
                  </a>
                {% else %}
                  <a class="site-header__logo-link" href="/" itemprop="url">{{ shop.name }}</a>
                {% endif %}
              </h1>
            </div>
          </div>
          <div class="col-lg-6 text-center">
            <div class="contentsticky_menu">
              <nav id="AccessibleNav">{% include 'site-nav' %}</nav>
            </div>
          </div>
          <div class="col-lg-3 col-md-3 d-flex justify-content-end align-items-center">
            <div class="contentsticky_search">
              <div class="site_search">
                <div class="search-toggle">{% include 'search-icon' %}</div>
              </div>
            </div>
            <div class="contentsticky_account">
              {% if settings.account_type == 'dropdown' %}
                <div class="site-header_myaccount dropdown">
                  <div class="myaccount-title dropdown-toggle text-center d-flex" data-toggle="dropdown">
                    <a class="myaccount" href="{{ shop.secure_url }}/account" rel="nofollow" title="{{ 'layout.customer.account' | t }}">
                      {% include 'user-icon' %}
                    </a>
                  </div>
                  {% include 'nov-block-account' %}
                </div>
              {% else %}
                <div class="site-header_myaccount account_canvas">
                  <div class="myaccount" title="{{ 'layout.customer.account' | t }}">
                    {% include 'user-icon' %}
                  </div>
                </div>
              {% endif %}
            </div>
            <div class="contentsticky_cart">
              <div class="{% if settings.mini_cart_type == 'canvas' %}cart_canvas{% else %}cart_dropdown{% endif %}">
                <div id="cart_block">
                  <div class="header-cart text-center">
                    <div class="site-header__cart">
                      <span class="site-header__cart-icon">{% include 'cart-icon' %}</span>
                      <span id="_desktop_cart_count" class="site-header__cart-count">
                        <span id="CartCount">{{ cart.item_count }}</span>
                      </span>
                    </div>
                  </div>
                  {% if settings.mini_cart_type != 'canvas' %}<div id="_desktop_cart"><div id="cart-info"></div></div>{% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>

  {% if section.settings.stickymenu == true %}
    <div id="header-sticky" class="d-none d-md-block"{% if section.settings.background_color != blank %} style="background-color: {{ section.settings.background_color_sticky }};"{% endif %}>
      <div class="bl_c h-100">
        <div class="row align-items-center h-100">
          <div class="col-md-9 d-flex align-items-center position-static">
          <div class="contentstickynew_logo"></div>
          <div class="contentstickynew_menu"></div>
          </div>
          <div class="col-md-3 d-flex align-items-center justify-content-end">
            <div class="contentstickynew_cart"></div>
            <div class="contentstickynew_search"></div>
            <div class="contentstickynew_account"></div>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
