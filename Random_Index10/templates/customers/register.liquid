{% assign name = 'customer.register.title' | t %}
{% include 'nov-breadcrumb', custom_pagetitle : name %}
<div class="page-width pb-30">
<div class="container">
    <div class="row justify-content-center">
      <div class="col-6 col-xs-12">
        <div class="form-vertical">
          {% form 'create_customer' %}
            <div class="title_block"><span>{{ 'customer.register.title' | t }}</span></div>
            {{ form.errors | default_errors }}

            <div class="block-form-login">
              <div class="form-group novform-firstname">
                <input type="text" name="customer[first_name]" id="FirstName" {% if form.first_name %} value="{{ form.first_name }}"{% endif %} placeholder="First name" required>
              </div>
              <div class="form-group novform-lastname">
                <input type="text" name="customer[last_name]" id="LastName" {% if form.last_name %} value="{{ form.last_name }}"{% endif %} placeholder="Last name" required >
              </div>
              <div class="form-group novform-email">
                <input type="email" name="customer[email]" id="email-rigester" class="{% if form.errors contains 'email' %} input--error{% endif %}" {% if form.email %} value="{{ form.email }}"{% endif %} placeholder="Email" required >
              </div>
              <div class="form-group novform-password">
                <input type="password" name="customer[password]" id="CreatePassword" class="{% if form.errors contains 'password' %} input--error{% endif %}" placeholder="Password" required >
              </div>
              <div class="form-checkbox novform-newsletter">
                <label id="form-checkbox" class="custom_checkbox d-inline-flex">
                  <span class="custom-checkbox">
                    <input type="checkbox" name="newsletter" value="1">
                  </span>
                  <span class="text">{{ 'customer.register.checkbox_newsletter' | t }}</span>
                </label>

                <div class="bank_login">{{ 'customer.register.bank_login' | t }}
                  <a href="/account/login">{{ 'customer.register.log_in' | t }}</a>
                </div>
              </div>
              <div class="form_submit">
                <input type="submit" value="{{ 'customer.register.submit_register' | t }}" class="btn">
              </div>
            </div>
          {% endform %}
        </div>
    </div>
  </div>
</div>
</div>
