{% schema %}
  {
    "name": "Vinova LookBook",
    "class": "index-section section-lookbook wow fadeInUp animated",
    "max_blocks": 9,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "SHOP THE LOOKBOOK"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub heading",
        "default": "Our Lookbook 2017 . hand-picked arrivals from the best designer"
      },
      {
        "type": "select",
        "id": "title_alignment",
        "label": "Title alignment",
        "default": "text-left",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "select",
        "id": "view_type",
        "label": "Choosen View Type",
        "options": [
         {"value": "type_grid", "label": "Type Grid"},
         {"value": "type_slider", "label": "Type Slider"}
        ],
        "default": "type_grid",
        "info": "Select lookbooks view type"
      },
      {
        "type": "range",
        "id": "spacing",
        "min": 5,
        "max": 50,
        "step": 5,
        "unit": "px",
        "label": "Spacing item",
        "default": 30
      },
      {
        "type":  "header",
        "content": "Lookbook item per row slider"
      },
      {
        "type": "range",
        "id": "items_lg",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Items desktop",
        "default": 3,
        "info": "Select number items desktop 992px ↑"
      },
      {
        "type": "range",
        "id": "items_md",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Items tablet",
        "default": 3,
        "info": "Select number items tablet 991px ↓"
      },
      {
        "type": "range",
        "id": "items_sm",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Items mobile",
        "default": 2,
        "info": "Select number items mobile 757px ↓"
      },
      {
        "type":  "header",
        "content": "Slider options"
      },
      {
        "type": "checkbox",
        "id": "show_dots",
        "label": "Show dots",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "show_nav",
        "label": "Show navigation",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "autoplay",
        "label": "Auto play",
        "default": false
      },
      {
        "type":  "header",
        "content": "Design option"
      },
      {
        "type": "checkbox",
        "id": "has_fullwidth",
        "label": "Full width",
        "default": false
      },
      {
        "type": "text",
        "id": "class",
        "label": "Class"
      },
      {
        "type": "text",
        "id": "distance_top",
        "label": "Top spacing section",
        "default": "30px"
      },
      {
        "type": "text",
        "id": "distance_bottom",
        "label": "Bottom spacing section",
        "default": "30px"
      }
    ],
    "blocks": [
      {
        "type": "lookbook",
        "name": "Lookbook Item",
        "settings": [
          {
            "type": "image_picker",
            "id": "lookbook_image",
            "label": "Image"
          },
          {
            "type":  "header",
            "content": "Pin list"
          },
          {
            "type":  "header",
            "content": "Pin 1"
          },
          {
            "type": "text",
            "id": "pin_position_1",
            "label": "Pin position 1",
            "info": "Example: Top: 50%; Left: 20%",
            "default": "Top: 50%; Left: 20%"
          },
          {
            "type": "select",
            "id": "pin_content_position_1",
            "label": "Content position",
            "options": [
             {"value": "topleft", "label": "Top Left"},
             {"value": "topright", "label": "Top Right"},
             {"value": "bottomleft", "label": "Bottom Left"},
             {"value": "bottomright", "label": "Bottom Right"}
            ],
            "default": "bottomleft"
          },
          {
            "type": "product",
            "id": "pin_product_1",
            "label": "Select pin product 1"
          },
          {
            "type":  "header",
            "content": "Pin 2"
          },
          {
            "type": "text",
            "id": "pin_position_2",
            "label": "Pin position 2",
            "info": "Example: Top: 50%; Left: 20%",
            "default": "Top: 50%; Left: 20%"
          },
          {
