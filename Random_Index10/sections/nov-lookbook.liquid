<div class="distance{% if section.settings.has_fullwidth == true %} full_width{% endif %}{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-owl">
  {% if section.settings.has_fullwidth == false %}
  <div class="container">
  {% endif %}
    {% if section.settings.title != blank %}
    <div class="{{ section.settings.title_alignment }}">
      <div class="title_block">
        <span>{{ section.settings.title | escape }}</span>
        {% if section.settings.subheading != blank %}
          <span class="sub_title">{{ section.settings.subheading | escape }}</span>
        {% endif %}
      </div>
    </div>
    {% endif %}
    {% case section.blocks.size %}
      {% when 1 %}
        {%- assign column_size = 'col-12' -%}
      {% when 2 %}
        {%- assign column_size = 'col-md-6' -%}
      {% when 3 %}
        {%- assign column_size = 'col-md-4' -%}
      {% when 4 %}
        {%- assign column_size = 'col-lg-3 col-md-4' -%}
      {% when 5 %}
        {%- assign column_size = 'col-lg-cus-5 col-md-cus-5 col-12' -%}
      {% else %}
        {%- assign column_size = 'col-lg-2 col-md-4 col-6' -%}
