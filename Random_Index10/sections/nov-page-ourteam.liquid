          {
            "type": "text",
            "id": "social_instagram_link",
            "label": "Instagram",
            "default": "#",
            "info": "http:\/\/instagram.com\/shopify"
          },
          {
            "type": "text",
            "id": "social_dribbble_link",
            "label": "Dribbble",
            "info": "http:\/\/dribbble.com\/shopify"
          },
          {
            "type": "text",
            "id": "social_google_link",
            "label": "Google",
            "info": "http:\/\/google.com\/shopify"
