            "id": "job",
            "label": "Info Job",
            "default": "Developer"
          },
          {
            "type": "richtext",
            "id": "decs",
            "label": "Text",
            "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ac pretium metus. Curabi tur velit sem, egestas sit amet dolor nec, tris tique vulputate enim.</p>"
          },
          {
            "type": "text",
            "id": "hotline",
            "label": "hotline",
            "default": "(+612) 2531 5600"
          },
          {
            "type": "text",
            "id": "email",
            "label": "email",
            "default": "sonata@domain.com"
          },
          {
            "type": "header",
            "content": "Social"
          },
          {
            "type": "checkbox",
            "id": "show_label",
            "label": "Show Label",
            "default": false
          },
          {
