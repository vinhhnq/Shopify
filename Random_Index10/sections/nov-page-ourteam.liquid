          },
          {
            "type": "text",
            "id": "social_snapchat_link",
            "label": "Snapchat",
            "info": "https:\/\/www.snapchat.com\/add\/shopify"
          },
          {
            "type": "text",
            "id": "social_youtube_link",
            "label": "YouTube",
            "info": "https:\/\/www.youtube.com\/shopify"
          },
          {
            "type": "text",
            "id": "social_vimeo_link",
            "label": "Vimeo",
            "info": "https:\/\/vimeo.com\/shopify"
          }
        ]
      }
    ]
  }
