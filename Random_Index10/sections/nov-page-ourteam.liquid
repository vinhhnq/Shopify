      {
        "type": "text",
        "id": "subheading",
        "label": "Sub heading"
      },
      {
        "type": "select",
        "id": "spacing",
        "label": "Spacing items",
        "default": "0",
        "options": [
          {
            "label": "0px",
            "value": "0"
          },
          {
            "label": "5px",
            "value": "5"
          },
          {
            "label": "10px",
            "value": "10"
          },
          {
            "label": "15px",
            "value": "15"
          },
          {
            "label": "20px",
            "value": "20"
          },
          {
            "label": "25px",
            "value": "25"
          },
          {
            "label": "30px",
            "value": "30"
          }
        ]
      },
      {
        "type": "text",
        "id": "class",
        "label": "Class"
      }
    ],
    "blocks": [
      {
        "type": "quote",
